@model phantientuan_2110900045.Models.Nsx
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "ThemNSX";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Thêm nhà sản xuất</h1>

<h4>Nhà sản xuất</h4>
<p>@TempData["Message"]</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="ThemNSX">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaNsx" class="control-label">Mã nhà sản xuất</label>
                <input asp-for="MaNsx" class="form-control" />
                <span asp-validation-for="MaNsx" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenNsx" class="control-label">Tên nhà sản xuất</label>
                <input asp-for="TenNsx" class="form-control" />
                <span asp-validation-for="TenNsx" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DanhSachNSX">Quay trở lại</a>
</div>

