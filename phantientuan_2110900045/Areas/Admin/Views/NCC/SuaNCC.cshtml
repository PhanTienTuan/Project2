@model phantientuan_2110900045.Models.Ncc
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "SuaNCC";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Sửa nhà cung cấp</h1>

<h4>Nhà cung cấp</h4>
<p>@TempData["Message"]</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="SuaNCC">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaNcc" />
            <div class="form-group">
                <label asp-for="TenNcc" class="control-label">Tên nhà cung cấp</label>
                <input asp-for="TenNcc" class="form-control" />
                <span asp-validation-for="TenNcc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DanhSachNCC">Qua trở lại</a>
</div>

