@model phantientuan_2110900045.Models.KhachHang
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "ThongTinKhachHang";
    Layout = "~/Views/Shared/LayoutWeb2.cshtml";
}

<h1>Thông tin khách hàng</h1>

<div>
    <h4>Khách hàng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên tài khoản:
        </dt>
        <dd class="col-sm-10">
            @Model.Username
        </dd>
        <dt class = "col-sm-2">
            Tên khách hàng:
        </dt>
        <dd class = "col-sm-10">
            @Model.TenKh
        </dd>
        <dt class = "col-sm-2">
            Địa chỉ:
        </dt>
        <dd class = "col-sm-10">
            @Model.DiaChi
        </dd>
        <dt class = "col-sm-2">
            Điện thoại:
        </dt>
        <dd class = "col-sm-10">
            @Model.DienThoai
        </dd>
        <dt class = "col-sm-2">
            Gmail:
        </dt>
        <dd class = "col-sm-10">
            @Model.Gmail
        </dd>
    </dl>
</div>
<div>
    <button class="btn btn-primary">
        <a asp-action="SuaThongTinKhachHang" asp-route-MaKh="@Model.MaKh"><h6>Sửa</h6></a>
    </button>
</div>
