@{
    Layout = null;
}
@model NguoiDung

<!DOCTYPE html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../../LayoutAccess/css/reset.css">
    <link rel="stylesheet" href="../../LayoutAccess/css/app.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css">
    <title>E-Shop</title>
</head>

<body>
    <div id="wrapper">
        @*<form action="" id="form-login">*@
        <div id="form-login">
            <h1 class="form-heading">Form đăng nhập</h1>
            <p style="color:#f5f5f5">@TempData["Message"]</p>
        @using (Html.BeginForm("Login", "Access", FormMethod.Post ))
        {
            <div class="form-group">
                <i class="far fa-user"></i>
                @Html.TextBoxFor(x=>x.Usename, new{@class="form-input", placeholder="Tên đăng nhập", required="required", autofocus="autofocus"})
                @*                <input type="text" class="form-input" placeholder="Tên đăng nhập">
            *@
            </div>
            <div class="form-group">
                <i class="fas fa-key"></i>
                @Html.TextBoxFor(x=>x.Password, new{@class="form-input",type="password", placeholder="Mật khẩu",})
                @*                <input type="password" class="form-input" placeholder="Mật khẩu">
            *@
                <div id="eye">
                    <i class="far fa-eye"></i>
                </div>
            </div>
            <button class="form-submit" type="submit">Đăng nhập</button>
            @*            <input type="submit" value="Đăng nhập" class="form-submit">
        *@  
        }@*</form>*@
            <button class="form-submit" asp-action="Register"><a style="color:#f5f5f5; text-decoration: none;" asp-action="Register">Đăng ký</a></button>
        </div>
    </div>

</body>
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<script src="../../LayoutAccess/js/app.js"></script>
</html>
